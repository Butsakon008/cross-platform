<UI>:
    id:scr_manager
    Scr_KnowledGe:
    Scr_bmi:

############หน้าที่1#############   
<Scr_KnowledGe>:
    name: "Main_scr"
    BoxLayout:        
        orientation: 'vertical'
        Image:
            source: "4.jpg"  
        Button:
            text: 'คำนวณ'
            color: 'yellow'
            font_name:"tahoma"
            background_color:
            on_press: app.root.current = "bmi_scr"
            size_hint:0.30, 0.15
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}    

############หน้าที่2#############           
<Scr_bmi>:
    name: "bmi_scr"
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'ย้อนกลับ'
            color: 'pink'
            font_name:"tahoma"
            on_press: app.root.current = "Main_scr"
            size_hint:0, 0.10
            pos_hint: {'x': 0.88, 'y': 0.90}
        GridLayout:
            cols:1
            TextInput:
                id:txt_weight
                hint_text:'Weight'   
                readonly:True
            Slider:
                id: sld_weight
                min: 30
                max: 100
                step: 0.5
                set: 40
                on_value: txt_weight.text = str(sld_weight.value)

            TextInput:
                id:txt_height
                hint_text:'Height'
                readonly:True
            Slider:
                id: sld_height
                min: 100
                max: 200
                step: 1
                set: 100
                on_value: txt_height.text = str(sld_height.value)
            
            Button:
                id:btn_bmi
                text: 'คำนวณ'
                color: 'yellow'
                font_name:"tahoma" 
                on_press: root.cal_bmi() #ผูกฟังก์ชั่น cal_bmi แบบไมส่งค่าใดๆ
       
            Label:
                id:lbl_bmi
                text: "bmi"
                color: 'red'
            
            Image:
                id:img_bmi