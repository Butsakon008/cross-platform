<UI>:
    Dlt_1:
    Dlt_2:
        
<Dlt_1>:
    name: 'D1'
    BoxLayout:
    	spacing: dp(10)
		orientation: 'vertical'
		padding: [0, dp(20), 0, 0]
		canvas.before:
			Color:
				rgba:[1,1,1,1]
			RoundedRectangle:
                pos:self.pos
				size:self.size
				source: 'D1.png'

    Button:
        text:"เข้าสูระบบ"
        font_name: 'tahoma'
        color: "black"
        on_press:app.root.current = 'D2'
        pos_hint:{'center_x' : 0.5,'center_y':0.6} #ปรับขยับชิดซ้ายขวา กลาง เรื่อยๆ 
        size_hint:0.45,0.10
        background_color:[255,255,0]

    Button:
        text:"ลงทะเบียนใหม่"
        font_name: 'tahoma'
        color: "white"
        on_press:app.root.current = 'D2'
        pos_hint:{'center_x' : 0.5,'center_y':0.45} #ปรับขยับชิดซ้ายขวา กลาง เรื่อยๆ 
        size_hint:0.45,0.10
        background_color:[128,0,128]

    Button:
        text:"For Foreigner"
        font_name: 'tahoma'
        color: "white"
        on_press:app.root.current = 'D2'
        pos_hint:{'center_x' : 0.5,'center_y':0.3} #ปรับขยับชิดซ้ายขวา กลาง เรื่อยๆ 
        size_hint:0.45,0.10
        background_color:[0,128,128]

    Image:
        source:'L.png'
        pos_hint:{'center_x' : 0.5,'center_y':0.2}
        size_hint:0.45,0.10

    Label:
        text:'Copyrights @ สงวนลิขสิทธิ์ @ 2021 กรมกาขนส่งทางบก|dlt.go.th'
        font_name: 'tahoma'
        color: "black"
        pos_hint:{'center_x' : 0.5,'center_y':0.1}


<Dlt_2>:
    name:'D2'
    BoxLayout:
        spacing: dp(10)
		orientation: 'vertical'
		padding: [0, dp(20), 0, 0]
		canvas.before:
			Color:
				rgba:[1,1,1,1]
			RoundedRectangle:
                pos:self.pos
				size:self.size
